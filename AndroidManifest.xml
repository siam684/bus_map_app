<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoh.nycbusschedules"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GetFirstLettersActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListExampleActivityActivity"
            android:label="@string/title_activity_list_example_activity" >
        </activity>
        <activity
            android:name=".GetRoutesActivity"
            android:label="@string/title_activity_get_routes" >
        </activity>
        <activity
            android:name=".GetDirectionActivity"
            android:label="@string/title_activity_get_direction" >
        </activity>
        <activity
            android:name=".GetStopsActivity"
            android:label="@string/title_activity_get_stops" >
        </activity>
        <activity
            android:name=".GetArrivalTimesActivity"
            android:label="@string/title_activity_get_arrival_times" >
        </activity>
    </application>

</manifest>
